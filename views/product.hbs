<div class="product">
  <div
    class="card-img product-image"
    style="background-image: url({{product.image}});"
  ></div>
  <div class="product-title fs-1">{{product.title}}</div>
  <div
    class="d-flex justify-content-between flex-column flex-sm-row align-items-center"
  >
    <div
      class="left d-flex gap-0 gap-sm-3 flex-column flex-sm-row align-items-center"
    >
      <small class="text-muted m-0 p-0">CreatedAt:
        <b class="p-0 m-0">{{formatDate product.createdAt}}</b></small>
      <p class="fw-bold m-0 p-0">Price: {{product.price}}.00$</p>
    </div>
    <div class="right">
      Author:
      <strong>{{product.user.firstName}} {{product.user.lastName}}</strong>
    </div>
  </div>
  <p class="mt-3">{{product.description}}</p>
</div>